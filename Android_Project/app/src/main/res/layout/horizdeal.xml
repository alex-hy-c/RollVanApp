<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/horizDeal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    card_view:cardBackgroundColor="?attr/button_color"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="50dp"
    card_view:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/offerImage"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/croiss"
            android:alpha="0.5"
            />
        <TextView
            android:id="@+id/offerText"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="offerText"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="?attr/text_color"/>


        <TextView
            android:id="@+id/offerBusiName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business Name"
            android:layout_below="@id/offerText"
            android:layout_centerInParent="true"
            android:textColor="?attr/text_color"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        </RelativeLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="?attr/background_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AboutFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_food_truck_svgrepo_com" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Tap to Expand or Minimize"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="20dp"
                />

            <Button
                android:id="@+id/aboutbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="About the App"
                android:layout_marginTop="20dp"
                android:backgroundTint="?attr/button_color"
                android:textColor="?attr/text_color"/>

            <TextView
                android:id="@+id/aboutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We are a service which allows under respresented local food businesses to advertise their services"
                android:textAlignment="center"
                android:textColor="?attr/text_color"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="gone"
                android:textSize="25dp"

                />

            <Button
                android:id="@+id/creatorsbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Creators"
                android:layout_marginTop="20dp"
                android:backgroundTint="?attr/button_color"
                android:textColor="?attr/text_color"/>

            <TextView
                android:id="@+id/creatorsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="This app was created by the University of Glasgow students:\n\n - Ben Johnston\n - Anirbit Ghosh\n - Alex Chak\n - Kieran Sharp\n - German Cherstvov"
                android:textAlignment="center"
                android:textColor="?attr/text_color"
                android:layout_gravity="center"
                android:visibility="gone"
                android:textSize="20dp"

                 />

            <Button
                android:id="@+id/licensebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="License"
                android:backgroundTint="?attr/button_color"
                android:textColor="?attr/text_color"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/licenseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:linksClickable="true"
                android:clickable="true"
                android:autoLink="web"
                android:text="@string/license_text"
                android:textAlignment="center"
                android:textColor="#36E7FF"
                android:layout_gravity="center"
                android:visibility="gone"
                android:textSize="20dp"

                 />
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>